where fa.AD_CLIENT_ID= $P{AD_Client_ID}
AND v.zz_subaccounttype IN ('BA','OA')
and (fa.dateacct >= to_date('01/01/1900','dd/mm/yyyy') and fa.dateacct <=$P{DateAcctTo})
AND fa.ACCOUNT_ID = v.C_ElementValue_id]]></queryString>

